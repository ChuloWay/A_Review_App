<% layout('/layouts/boilerplate') -%>


<!-- centering a div -->
<div class="container d-flex justify-content-center align-items-center mt-5">
   <div class="row">
     <div class="col-md-6 offset-md-3 col-md-4 offset-xl-4">
       <div class="card shadow">
         <div class="card-body">
          <h1>Login</h1>
          <form action="/login" novalidate class="validateForm" method="POST">
              <div class="mb-3">
                  <label class="form-label" for="username">Username</label>
                  <input
                    class="form-control"
                    type="text"
                    id="username"
                    name="username"
                    required
                  />
                  <div class="valid-feedback">Good!</div>
                </div>
              <div class="mb-3">
                  <label class="form-label" for="password">Password</label>
                  <input
                    class="form-control"
                    type="password"
                    id="password"
                    name="password"
                    required
                  />
                  <div class="valid-feedback">Good!</div>
                </div>
                <button class="btn btn-primary">Login</button>
          </form>
         </div>
       </div>

     </div>
   </div>
</div>