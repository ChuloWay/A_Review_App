<% layout('/layouts/boilerplate') -%>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Restaurants</h1>
<div>
  <a href="/restaurants/new">Create New</a>
</div>
<% for(let restaurant of restaurants) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <%if(restaurant.images.length) { %> 
      <img class="img-fluid" alt="" src="<%=restaurant.images[0].url%>" />
      <% }else {%>
        <img class="img-fluid" alt="" src="https://images.unsplash.com/photo-1487088678257-3a541e6e3922?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Ymxhbmt8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60" />
      <% } %>  
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.title %></h5>
        <p class="card-text"><%=restaurant.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%= restaurant.location  %> </small>
        </p>
        <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>">View <%=restaurant.title%></a>
      </div>
    </div>
  </div>
</div>
<% } %>


<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
</script>

<script src="/scripts/clusterMap.js"></script>