<% layout('/layouts/boilerplate') -%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%=restaurants.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= restaurants.title %></h5>
              <p class="card-text"><%=restaurants.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= restaurants.location  %> </li>
              <li class="list-group-item">$<%= restaurants.price%>/Meal</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/restaurants/<%= restaurants._id %>/edit ">Edit</a>
                <form class="d-inline" action="/restaurants/<%= restaurants._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                    </form>           
            </div>
            <div class="card-footer text-muted">
                <a  class="card-link btn btn-secondary" href="/restaurants">All Restaurants</a>
            </div>
          </div>
    </div>
</div>
    <footer></footer>
