<% layout('/layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">Edit Restaurant</h1>
  <div class="col-6 offset-3">
    <form action="/restaurants/<%= restaurants._id %>?_method=PUT" method="POST" novalidate class="validateForm" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="restaurant[title]"
          value="<%=restaurants.title%>"
          required
        />
        <div class="valid-feedback">Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="restaurant[location]"
          value="<%= restaurants.location %>"
          required
        />
        <div class="valid-feedback">Good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Restaurant Price</label>

      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" class="form-control" id="price"   placeholder="0.00" aria-label="price" aria-describedby="price-label" name="restaurant[price]" value="<%= restaurants.price %> "
        required
        >
        <div class="valid-feedback">Good!</div>
      </div>

    </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="restaurant[description]"
          required
        /><%= restaurants.description %></textarea>
        <div class="valid-feedback">Good Description!</div>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label mb-2">Add More Image(s)..</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
        <div class="valid-feedback">Good!</div>
      </div>
  
      <div class="mb-3">
        <button class="btn btn-info">Update Restaurant</button>
      </div>
    </form>
    <a href="/restaurants/<%= restaurants._id %> ">Back To Restaurants</a>
  </div>
</div>

